  body
    script.
      if (!Modernizr.mq('only all')) {
      var script = document.createElement('script');
      script.type = 'text/javascript';
      script.src = rootPrefix + 'js/vendor/respond.min.js';
      if(document.body != null){ document.body.appendChild(script)};
      var style = document.createElement('style');        
      style.type = 'text/css';
      style.src = 'css/ie-only.css';
      if(document.body != null){ document.body.appendChild(script); document.body.appendChild(style) };}
